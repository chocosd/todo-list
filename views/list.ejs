<%- include('header'); -%>
  <h1 class="card-title pb-3">
    <%= listTitle %>
  </h1>
  <section class="card py-4 px-0 rounded rounded-3">
    <div class="list-group px-5 list-group-flush overflow-auto cust-card-container">
      <% newListItems.forEach(function(listItem) { %>
      <form action="/delete" method="post" class="cust-list-form">
        <div class="list-group-item d-flex px-0 justify-content-between align-items-center">
          <input class="ml-2 mr-5" type="checkbox" name="checkbox" value="<%= listItem._id %>" onChange="this.form.submit()">
          <p style="display:inline-block;" class="my-0 px-0 py-2"><%= listItem.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
    <%})%>
    </div>
    <form class="px-5" action="/" method="post">
      <input class="form-control mb-3 mt-3" type="text" autocomplete="off" name="newItem" placeholder="Add to your list">
      <button class="btn btn-primary" type="submit" value="<%= listTitle %>" name="list">+</button>
    </form>
  </section>

<%- include('footer'); -%>
